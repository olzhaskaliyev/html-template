extends templates/layout
block content

  #homeBanners.carousel.slide(data-ride="carousel" style='background: url(/images/article.jpg) no-repeat center; background-size: cover').text-white
    ol.carousel-indicators
      - for (i = 0; i < 3; i++)
        li(data-target='#homeBanners' data-slide-to=i class={active: i === 0})

    .carousel-inner
      - for (i = 0; i < 3; i++)
        .carousel-item(class={active: i === 0})
          .jumbotron-fluid.py-5.text-center.d-flex.align-items-center
            .container
              h1.display-4 Hello, Slide #{i + 1}!
              p.lead This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.
              hr.my-4
              p It uses utility classes for typography and spacing to space content out within the larger container.
              a(href='/article.html').btn.btn-primary.btn-lg.mb-3 Learn more

    a(href='#homeBanners' data-slide="prev").carousel-control-prev
      .carousel-control-prev-icon
    a(href='#homeBanners' data-slide="next").carousel-control-next
      .carousel-control-next-icon

  section.py-5
    .container
      .row
        - for (i = 0; i < 5; i++)
          div(class= i === 0 ? 'col-sm-8' : 'col-sm-4')
            include templates/views/card

      .row.justify-content-center
        .col-sm-4
          a(href='category.html').btn.btn-outline-primary.btn-lg.btn-block More
